<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/home_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".UpdateItemDetails"
            android:parentActivityName=".InventoryList" />
        <activity
            android:name=".AddItemActivity"
            android:label="Add Item"
            android:parentActivityName=".InventoryList" />
        <activity
            android:name=".InventoryList"
            android:label="Inventory List"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".AccountSettings"
            android:label="Account Settings"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".PropertyTab"
            android:label="Property Tab"
            android:parentActivityName=".HomeScreen" />
        <activity android:name=".HomeScreen" />
        <activity
            android:name=".CalendarMenu"
            android:label="Calendar"
            android:parentActivityName=".HomeScreen" />
        <activity
            android:name=".PropertyDetailsTab"
            android:parentActivityName=".HomeScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>